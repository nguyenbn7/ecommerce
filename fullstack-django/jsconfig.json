{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$static": [
                "./src/static"
            ],
            "$static/*": [
                "./src/static/*",
            ],
            "$public": [
                "./src/public"
            ],
            "$public/*": [
                "./src/public/*",
            ],
        },
    },
    "include": [
        "./src/static/**/*",
        "./src/public/**/*",
    ],
    "exclude": [
        "./node_modules",
        "./src/dist",
        "./src/build"
    ]
}