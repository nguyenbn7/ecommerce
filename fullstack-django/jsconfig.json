{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$static/*": [
                "./src/static/*",
            ],
            "$public/*": [
                "./src/public/*",
            ]
        },
        "lib": [
            "esnext",
            "DOM",
            "DOM.Iterable",
        ],
        "allowJs": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "./node_modules/vite/client.d.ts"
        ]
    },
    "include": [
        "ambient.d.ts",
        "./src/**/*.js",
        "./src/**/*.ts",
        "./vite.config.js",
    ],
    "exclude": [
        "./node_modules/**",
        "./src/dist",
        "./src/build"
    ]
}